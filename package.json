{
    "name": "@nlib/esmify",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.3.3",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "homepage": "https://github.com/nlibjs/esmify",
    "repository": "https://github.com/nlibjs/esmify",
    "engines": {
        "node": ">=14"
    },
    "type": "module",
    "main": "./lib/esmify.mjs",
    "files": [
        "bin",
        "lib"
    ],
    "bin": {
        "esmify": "./bin/esmify.mjs",
        "nlib-esmify": "./bin/esmify.mjs"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:tsc": "tsc",
        "build:esmify": "node bin/esmify.mjs \"lib/**\"",
        "test": "run-s test:*",
        "test:build": "run-s test:build:*",
        "test:build:tsc": "tsc",
        "test:build:esmify": "node bin/esmify.mjs --keepSourceMap \"lib/**\"",
        "test:unit": "ava",
        "lint": "eslint --ext .ts src",
        "version": "run-s version:*",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "acorn": "8.10.0",
        "acorn-walk": "8.2.0",
        "commander": "11.0.0",
        "fast-glob": "3.3.1",
        "typescript": "5.1.6"
    },
    "devDependencies": {
        "@nlib/changelog": "0.3.0",
        "@nlib/eslint-config": "3.20.1",
        "@nlib/githooks": "0.2.0",
        "@types/node": "20.5.3",
        "@typescript-eslint/eslint-plugin": "6.4.1",
        "@typescript-eslint/parser": "6.4.1",
        "ava": "5.3.1",
        "eslint": "8.47.0",
        "lint-staged": "14.0.1",
        "npm-run-all": "4.1.5"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        },
        "ignorePatterns": [
            "lib"
        ]
    },
    "ava": {
        "files": [
            "lib/**/*.test.{ts,tsx,js,mjs,cjs,jsx}"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
